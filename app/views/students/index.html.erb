<h3 class="center-align">Students Listing</h3>


 <div class="row" id="pair-listing">
    <% @students.each do |student| %>
        <div class="col s12 m6 d-flex">
            <div class="card blue-grey darken-1 h-100">
                <div class="card-content white-text">
                    <span class="card-title"><%= student.name %></span>
                    <p><%= student.email %></p>
                    <p>Course Enrollments: 
                        <% if student.courses.none? %>
                            None
                        <% else %>
                            <% student.courses.each do |course| %>
                                <br><%= link_to course.name, root_path %>
                            <% end %>
                        <% end %>
                    </p>
                </div>
                <div class="card-action">
                    <%= link_to "View Profile", student %>
                </div>
            </div>
        </div>
    <% end %>
</div>