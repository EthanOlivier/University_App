<h3 class="center-align">Courses Listing</h3>


<div class="row" id="pair-listing">
    <% @courses.each do |course| %>
        <div class="col s12 m6 d-flex">
            <div class="card blue-grey darken-1 h-100">
                <div class="card-content white-text">
                    <span class="card-title"><%= course.short_name %>: <%= course.name %></span>
                    <p><%= course.description %></p>
                </div>
                <div class="card-action">
                    <% if logged_in? && !(current_user.courses.include?(course)) %>
                        <%= link_to "Enroll", course_enroll_path(course_id: course.id), method: :post %>
                    <% end %>
                    <%= link_to "Info", course %>
                </div>
            </div>
        </div>
    <% end %>
</div>